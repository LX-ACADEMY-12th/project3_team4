<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team4.mywebapp.mapper.LoginMapper">

    <!-- 로그인 -->
    <select id="login" parameterType="com.team4.mywebapp.dto.LoginDto" resultType="com.team4.mywebapp.dto.UserDto">
    	select * from user where login_id = #{loginId}
    </select>
    
     <select id="selectUserByUsername" parameterType="String" resultType="com.team4.mywebapp.dto.UserDto">
	    SELECT user_id, login_id, login_pw, nickname,
	           profile_photo_path, status_message, birth_date, 
	           region, hobby, gender
	    FROM user 
	    WHERE login_id = #{loginId}
	</select>
    

</mapper>